# PostgreSQL Connection String
# Format: postgres://username:password@host:port/database
DATABASE_NAME=romanticist
DATABASE_PORT=5432
DATABASE_HOST=localhost
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres

# For local development
DATABASE_URL=postgres://postgres:postgres@localhost:5432/romanticist

# For Vercel deployment with connection pooling (recommended)
# DATABASE_URL=postgres://username:password@host:port/database?connection_limit=1&pool_timeout=10

# CORS Configuration
# フロントエンドのオリジンを指定（複数指定する場合はコードを修正）
ALLOWED_ORIGIN=http://localhost:8081

# API URL (Optional - for OpenAPI documentation)
# Vercel automatically sets VERCEL_URL, so this is only needed for custom domains
# API_URL=https://your-custom-domain.com

# Server Configuration
PORT=3000

# Node Environment
NODE_ENV=development